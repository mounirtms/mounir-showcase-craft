{
  "budgets": [
    {
      "path": "/**",
      "timings": [
        {
          "metric": "first-contentful-paint",
          "budget": 2000,
          "tolerance": 200
        },
        {
          "metric": "largest-contentful-paint", 
          "budget": 2500,
          "tolerance": 300
        },
        {
          "metric": "cumulative-layout-shift",
          "budget": 0.1,
          "tolerance": 0.02
        },
        {
          "metric": "total-blocking-time",
          "budget": 300,
          "tolerance": 50
        },
        {
          "metric": "speed-index",
          "budget": 3000,
          "tolerance": 400
        },
        {
          "metric": "interactive",
          "budget": 3500,
          "tolerance": 500
        }
      ],
      "resourceSizes": [
        {
          "resourceType": "script",
          "budget": 500,
          "tolerance": 50
        },
        {
          "resourceType": "stylesheet",
          "budget": 100,
          "tolerance": 20
        },
        {
          "resourceType": "image",
          "budget": 1000,
          "tolerance": 200
        },
        {
          "resourceType": "font",
          "budget": 200,
          "tolerance": 50
        },
        {
          "resourceType": "document",
          "budget": 50,
          "tolerance": 10
        },
        {
          "resourceType": "other",
          "budget": 100,
          "tolerance": 20
        },
        {
          "resourceType": "total",
          "budget": 1500,
          "tolerance": 200
        }
      ],
      "resourceCounts": [
        {
          "resourceType": "script",
          "budget": 10,
          "tolerance": 2
        },
        {
          "resourceType": "stylesheet",
          "budget": 5,
          "tolerance": 1
        },
        {
          "resourceType": "image",
          "budget": 20,
          "tolerance": 5
        },
        {
          "resourceType": "font",
          "budget": 4,
          "tolerance": 1
        },
        {
          "resourceType": "total",
          "budget": 50,
          "tolerance": 10
        }
      ]
    },
    {
      "path": "/admin/**",
      "timings": [
        {
          "metric": "first-contentful-paint",
          "budget": 2500,
          "tolerance": 300
        },
        {
          "metric": "largest-contentful-paint",
          "budget": 3000,
          "tolerance": 400
        },
        {
          "metric": "cumulative-layout-shift",
          "budget": 0.15,
          "tolerance": 0.03
        },
        {
          "metric": "total-blocking-time",
          "budget": 400,
          "tolerance": 75
        },
        {
          "metric": "speed-index",
          "budget": 3500,
          "tolerance": 500
        }
      ],
      "resourceSizes": [
        {
          "resourceType": "script",
          "budget": 750,
          "tolerance": 100
        },
        {
          "resourceType": "stylesheet",
          "budget": 150,
          "tolerance": 30
        },
        {
          "resourceType": "total",
          "budget": 2000,
          "tolerance": 300
        }
      ]
    }
  ],
  "alerts": {
    "budget_exceeded": {
      "severity": "error",
      "action": "fail_build"
    },
    "tolerance_exceeded": {
      "severity": "warning", 
      "action": "notify"
    },
    "improvement_detected": {
      "severity": "info",
      "action": "celebrate"
    }
  },
  "reporting": {
    "format": ["json", "html", "console"],
    "outputPath": "./performance-reports",
    "includeHistory": true,
    "maxHistoryEntries": 50,
    "compareWithBaseline": true
  },
  "enforcement": {
    "failOnBudgetExceeded": true,
    "failOnToleranceExceeded": false,
    "allowedFailures": 2,
    "retryOnFailure": true,
    "maxRetries": 3,
    "notifications": {
      "slack": {
        "enabled": true,
        "webhookUrl": "${SLACK_WEBHOOK_URL}",
        "channel": "#performance-alerts"
      },
      "email": {
        "enabled": false,
        "recipients": ["team@example.com"]
      },
      "github": {
        "enabled": true,
        "createIssue": false,
        "addComment": true
      }
    },
    "thresholds": {
      "critical": {
        "performanceScore": 50,
        "fcpMs": 4000,
        "lcpMs": 4000,
        "clsScore": 0.25
      },
      "warning": {
        "performanceScore": 70,
        "fcpMs": 3000,
        "lcpMs": 3500,
        "clsScore": 0.15
      }
    }
  }
}